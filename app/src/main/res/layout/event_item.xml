<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_left_item_container"
    android:elevation="@dimen/elevation_item"
    app:cardCornerRadius="10dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_item"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_event"
            android:background="@color/color_app"
            android:textAlignment="center"
            android:textColor="@color/white"

            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_marginRight="@dimen/margin_left_item"
            android:layout_marginTop="@dimen/margin_left_item"
            android:text="sample"
            android:textSize="@dimen/event_size_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_button_item"
            android:textSize="@dimen/category_size_item"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:text="example"/>
        <TextView
            android:id="@+id/tv_item_calendar"
            android:layout_width="match_parent"
            android:text="example"
            android:layout_marginBottom="@dimen/margin_button_calendar"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>